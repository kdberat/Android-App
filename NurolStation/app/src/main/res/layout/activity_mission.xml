<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CallActivity">

    <Button
        android:id="@+id/buttoniptal"
        android:layout_width="180dp"
        android:layout_height="99dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="20dp"
        android:background="#B81111"
        android:onClick="forkliftCancel"
        android:text="Ä°ptal Et"
        app:layout_constraintBottom_toTopOf="@+id/timerForklift"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/forkliftMessage" />

    <TextView
        android:id="@+id/forkliftMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="40dp"
        android:text="Cevap Bekleniyor..."
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/buttoniptal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Chronometer
        android:id="@+id/timerForklift"
        android:layout_width="274dp"
        android:layout_height="67dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="100dp"
        android:textSize="26sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttoniptal" />

</androidx.constraintlayout.widget.ConstraintLayout>