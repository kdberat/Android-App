<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OnWayActivity">

    <TextView
        android:id="@+id/acceptedtextView"
        android:layout_width="347dp"
        android:layout_height="45dp"
        android:layout_marginTop="40dp"
        android:text="İstek kabul edildi, forklift yola çıktı..."
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Chronometer
        android:id="@+id/timerAccepted"
        android:layout_width="274dp"
        android:layout_height="67dp"
        android:layout_marginTop="40dp"
        android:textAlignment="center"
        android:textSize="26sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/acceptedtextView" />

    <Button
        android:id="@+id/forkliftArrived"
        android:layout_width="164dp"
        android:layout_height="77dp"
        android:layout_marginTop="40dp"
        android:onClick="missionCompleted"
        android:text="Geri Dön"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/timerAccepted" />
</androidx.constraintlayout.widget.ConstraintLayout>