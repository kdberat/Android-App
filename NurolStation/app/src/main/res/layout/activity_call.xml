<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CallActivity">

    <Button
        android:id="@+id/acceptTrans"
        android:layout_width="330dp"
        android:layout_height="72dp"
        android:layout_marginTop="324dp"
        android:onClick="accepttrans"
        android:text="Mal Bekleme Ekranı"
        app:layout_constraintEnd_toEndOf="@+id/towtruckcall"
        app:layout_constraintHorizontal_bias="0.477"
        app:layout_constraintStart_toStartOf="@+id/forkliftCall"
        app:layout_constraintTop_toBottomOf="@+id/userName" />

    <Button
        android:id="@+id/towtruckcall"
        android:layout_width="157dp"
        android:layout_height="96dp"
        android:layout_marginTop="24dp"
        android:onClick="callTowTruck"
        android:text="ÇEKİCİ ÇAĞIR"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/forkliftCall"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="155dp"
        android:layout_height="155dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toStartOf="@+id/imageView2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userName"
        app:srcCompat="@drawable/forklift2" />

    <Button
        android:id="@+id/forkliftCall"
        android:layout_width="157dp"
        android:layout_height="96dp"
        android:layout_marginTop="24dp"
        android:onClick="callForklift"
        android:text="Forklift Çağır"
        app:layout_constraintEnd_toStartOf="@+id/towtruckcall"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:id="@+id/userName"
        android:layout_width="279dp"
        android:layout_height="37dp"
        android:layout_marginTop="24dp"
        android:text="Station Name"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="155dp"
        android:layout_height="155dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.346"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/userName"
        app:srcCompat="@drawable/cekici" />
</androidx.constraintlayout.widget.ConstraintLayout>